<div class="container mt-3">
    <div class="row">
        <div class="col-md-10">
            <h2>Detail Debt</h2>
            <% if (!debt) { %>
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Maaf Hutang Tidak ditemukan!</h4>
                    <p>Sorry, The Debt is not found</p>
                    <hr>
                    <p class="mb-0">Silahkan <a href="/notes" class="card-link">&laquo; Kembali</a></p>
                </div>
                <% } else{ %>
                    <div class="d-flex">
                        <div class="card" style="width: 25rem;">
                            <div class="card-body">
                                <h5 class="card-title">Pemberi Hutang : <%= debt.pemberi %>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">Total : Rp.<%= debt.jumlah %>
                                </h6>
                                <ul>
                                    <li>
                                        <p class="card-text">Berhutang pada : <%= formattedDate %>
                                        </p>
                                    </li>
                                    <li>
                                        <p>Jatuh Tempo : <%= formattedDeadline %></p>
                                    </li>
                                </ul>
                                <% if (debt.status === 'unpaid') { %>
                                    <a href="/notes/status/<%= debt._id %>" class="badge bg-danger rounded-pill">
                                        <%= debt.status %>
                                    </a>
                                <% }else {%>
                                    <a href="/notes/status/<%= debt._id %>" class="badge bg-primary rounded-pill">
                                        <%= debt.status %>
                                    </a>
                                <% } %>
                                <div class="container d-flex col-md-8">
                                    <a href="/notes/edit/<%= debt._id %>"
                                        class="col-md-4 flex-start btn btn-info rounded-pill badge"><i
                                            class="bi bi-pencil-square"></i> Ubah </a>
                                    <!-- <a href="/notes/delete/ contact.nama " onclick="return confirm('Yakin Ingin menghapus?')" class="flex-end btn btn-danger rounded-pill badge"><i class="bi bi-trash3-fill"></i> Delete </a> -->
                                    <form action="/notes?_method=DELETE" method="POST">
                                        <input type="text" hidden name="_id" value="<%= debt._id %>">
                                        <button type="submit" onclick="return confirm('Yakin Ingin menghapus?')"
                                            class="flex-end btn btn-danger rounded-pill badge"><i
                                                class="bi bi-trash3-fill"></i> Delete</button>
                                    </form>
                                </div>
                                <a href="/notes" class="flex-start card-link">&laquo; Kembali</a>
                            </div>
                        </div>
                        <div class="flex-wrap border border-white border-5"> </div>
                        <div class="card flex-wrap" style="width: 25rem;">
                            <div class="card-body">
                                <h5 class="card-title">Catatan</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">catatan optional</h6>
                                <p class="card-text">
                                    <%= debt.catatan %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>